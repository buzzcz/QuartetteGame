<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:controller="cz.zcu.kiv.ups.gui.LoginController" VBox.vgrow="SOMETIMES" alignment="CENTER" spacing="10"
      xmlns:fx="http://javafx.com/fxml">
	<HBox spacing="10">
		<TextField fx:id="hostnameTextField" HBox.hgrow="SOMETIMES" promptText="Server address"/>
		<TextField fx:id="portTextField" HBox.hgrow="SOMETIMES" promptText="Server port"/>
	</HBox>
	<TextField fx:id="nicknameTextField" promptText="Nickname"/>
	<Button text="Log In" onAction="#logIn"/>
</VBox>